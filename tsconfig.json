{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/assets/*": [
        "./app/assets/*"
      ],
      "@/context/*": [
        "./app/context/*"
      ],
      "@/components/*": [
        "./app/components/*"
      ],
      "@/styles/*": [
        "./app/styles/*"
      ],
      "@/interfaces/*": [
        "./app/interfaces/*"
      ],
      "@/layout/*": [
        "./app/layout/*"
      ]
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js"
  ],
  "exclude": [
    "node_modules"
  ]
}